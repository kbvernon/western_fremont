@article{codding_etal2022,
  title = {Socioecological Dynamics Structuring the Spread of Farming in the {{North American}} Basin-Plateau Region},
  author = {Codding, Brian F. and Brenner Coltrain, Joan and Louderback, Lisbeth and Vernon, Kenneth Blake and Magargal, Kate E. and Yaworsky, Peter M. and Robinson, Erick and Brewer, Simon C. and Spangler, Jerry D.},
  date = {2022-07-04},
