@article{dekort_etal2020,
  title = {Toward Reliable Habitat Suitability and Accessibility Models in an Era of Multiple Environmental Stressors},
  author = {De Kort, Hanne and Baguette, Michel and Lenoir, Jonathan and Stevens, Virginie M.},
  date = {2020-10-01},
  journaltitle = {Ecology and Evolution},
  shortjournal = {Ecology and Evolution},
  volume = {10},
