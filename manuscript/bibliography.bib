@article{sillero_barbosa2021,
  title = {Common Mistakes in Ecological Niche Models},
  author = {Sillero, Neftalí and Barbosa, A. Márcia},
  date = {2021-02-01},
  journaltitle = {International Journal of Geographical Information Science},
  shortjournal = {International Journal of Geographical Information Science},
  volume = {35},
